<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondoiniciosesion"
        tools:context=".iniciSessio">

        <TextView
            android:id="@+id/textView"
            android:layout_width="356dp"
            android:layout_height="90dp"
            android:layout_marginTop="172dp"
            android:layout_marginEnd="28dp"
            android:fontFamily="@font/abril_fatface"
            android:text="Welcome!"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="93dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="159dp"
            android:text="Correu"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="189dp"
            android:layout_height="36dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="111dp"
            android:text="Contrasenya"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iniciCorreu" />

        <EditText
            android:id="@+id/iniciPassword"
            android:layout_width="313dp"
            android:layout_height="54dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="49dp"
            android:background="@color/black"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <ImageButton
            android:id="@+id/logInButton"
            android:layout_width="192dp"
            android:layout_height="161dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="94dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@null"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/loginbutton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iniciPassword" />

        <EditText
            android:id="@+id/iniciCorreu"
            android:layout_width="310dp"
            android:layout_height="49dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="51dp"
            android:background="@color/black"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>