<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InfromacioPerduts">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toStartOf="@+id/colorAnimal"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/nomAnimal"
            android:layout_width="145dp"
            android:layout_height="39dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="62dp"
            android:background="#ECECEC"
            android:lineSpacingExtra="8sp"
            android:text="Pepe"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <TextView
            android:id="@+id/colorAnimal"
            android:layout_width="146dp"
            android:layout_height="31dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="62dp"
            android:background="#ECECEC"
            android:text="MarrÃ³"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />

        <TextView
            android:id="@+id/localitatPerdutAnimal"
            android:layout_width="314dp"
            android:layout_height="32dp"
            android:layout_marginTop="15dp"
            android:background="#ECECEC"
            android:text="Vidreres"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/textView18"
            tools:layout_editor_absoluteX="45dp" />

        <TextView
            android:id="@+id/detallsAnimalPerdut"
            android:layout_width="315dp"
            android:layout_height="200dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="53dp"
            android:background="#ECECEC"
            android:text="Te taques blanques a les potetes. Li agraden les salchiches. Es amigable"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="177dp"
            android:text="Nom"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="173dp"
            android:text="Color"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomAnimal" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="107dp"
            android:layout_height="22dp"
            android:layout_marginTop="24dp"
            android:text="Localitat perdut"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            tools:layout_editor_absoluteX="43dp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="107dp"
            android:layout_height="22dp"
            android:layout_marginTop="24dp"
            android:text="Detalls"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/localitatPerdutAnimal"
            tools:layout_editor_absoluteX="43dp" />

        <Button
            android:id="@+id/contactePerdut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="102dp"
            android:backgroundTint="#875D41"
            android:text="Numero de contacte"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detallsAnimalPerdut" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
