<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".seleccioAnimal.SelecionaAnimal">

        <ImageButton
            android:id="@+id/perroButton"
            android:layout_width="107dp"
            android:layout_height="102dp"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="14dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitStart"
            app:layout_constraintEnd_toStartOf="@+id/gatoButton"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/perro" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="102dp"
            android:text="Gos"
            app:layout_constraintEnd_toStartOf="@+id/textView19"
            app:layout_constraintTop_toBottomOf="@+id/perroButton" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="44dp"
            android:layout_height="20dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="184dp"
            android:text="Reptils"
            app:layout_constraintEnd_toStartOf="@+id/textView23"
            app:layout_constraintTop_toBottomOf="@+id/reptilButton" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="104dp"
            android:layout_height="102dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="15dp"
            android:text="Quin tipus d'animal es?"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/roedorButton"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <ImageButton
            android:id="@+id/gatoButton"
            android:layout_width="107dp"
            android:layout_height="102dp"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="15dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitStart"
            app:layout_constraintEnd_toStartOf="@+id/pajaroButton"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/gato" />

        <ImageButton
            android:id="@+id/pajaroButton"
            android:layout_width="107dp"
            android:layout_height="102dp"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="33dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pajaros" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="69dp"
            android:text="Ocells"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pajaroButton" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="88dp"
            android:text="Gat"
            app:layout_constraintEnd_toStartOf="@+id/textView21"
            app:layout_constraintTop_toBottomOf="@+id/gatoButton" />

        <ImageButton
            android:id="@+id/roedorButton"
            android:layout_width="107dp"
            android:layout_height="102dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="33dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView21"
            app:srcCompat="@drawable/roedores" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="80dp"
            android:layout_height="18dp"
            android:layout_marginEnd="46dp"
            android:text="Rosegadors"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roedorButton" />

        <ImageButton
            android:id="@+id/otrosButton"
            android:layout_width="107dp"
            android:layout_height="102dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="92dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView23"
            app:srcCompat="@drawable/otros" />

        <ImageButton
            android:id="@+id/animalesGranjaButton"
            android:layout_width="107dp"
            android:layout_height="102dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="23dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitStart"
            app:layout_constraintEnd_toStartOf="@+id/otrosButton"
            app:layout_constraintTop_toBottomOf="@+id/textView22"
            app:srcCompat="@drawable/animalesgranja" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="78dp"
            android:layout_height="38dp"
            android:layout_marginEnd="53dp"
            android:text="Animals de granja"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/textView25"
            app:layout_constraintTop_toBottomOf="@+id/animalesGranjaButton" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="105dp"
            android:text="Altres"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otrosButton" />

        <ImageButton
            android:id="@+id/reptilButton"
            android:layout_width="107dp"
            android:layout_height="102dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="17dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="fitStart"
            app:layout_constraintEnd_toStartOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/textView15"
            app:srcCompat="@drawable/reptiles" />

        <TextView
            android:id="@+id/numero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="178dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView25" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
