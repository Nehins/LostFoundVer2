<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondoregistre"
        tools:context=".cambiarUsuari.update_usuari">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="52dp"
            android:backgroundTint="@color/new_animal_background"
            android:fontFamily="@font/arbutus_slab"
            android:text="Modificar"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addPhotog" />

        <EditText
            android:id="@+id/nomUsuari"
            android:layout_width="253dp"
            android:layout_height="40dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="88dp"
            android:background="@color/brownMasClaro"
            android:backgroundTint="@color/brownMasClaro"
            android:ems="10"
            android:fontFamily="@font/arbutus_slab"
            android:hint="Nom"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/correu"
            android:layout_width="253dp"
            android:layout_height="40dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="20dp"
            android:background="@color/brownMasClaro"
            android:ems="10"
            android:fontFamily="@font/arbutus_slab"
            android:hint="Correu"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/telefon" />

        <EditText
            android:id="@+id/contra"
            android:layout_width="253dp"
            android:layout_height="40dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="20dp"
            android:background="@color/brownMasClaro"
            android:ems="10"
            android:fontFamily="@font/arbutus_slab"
            android:hint="Contrasenya"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/correu" />

        <EditText
            android:id="@+id/verContra"
            android:layout_width="253dp"
            android:layout_height="40dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="20dp"
            android:background="@color/brownMasClaro"
            android:ems="10"
            android:fontFamily="@font/arbutus_slab"
            android:hint="Verificacio Contrasenya"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contra" />

        <EditText
            android:id="@+id/telefon"
            android:layout_width="253dp"
            android:layout_height="40dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="20dp"
            android:background="@color/brownMasClaro"
            android:ems="10"
            android:fontFamily="@font/arbutus_slab"
            android:hint="Telefon"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomUsuari" />

        <ImageButton
            android:id="@+id/addPhotog"
            android:layout_width="77dp"
            android:layout_height="70dp"
            android:layout_marginStart="164dp"
            android:layout_marginTop="48dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/verContra"
            app:srcCompat="@drawable/ic_baseline_add_photo_alternate_244" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="407dp"
            android:layout_height="20dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="2dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
