<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondoregistre"
        tools:context=".cambiarUsuari.update_usuari">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="136dp"
            android:layout_marginTop="144dp"
            android:text="Modificar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/verContra" />

        <EditText
            android:id="@+id/nomUsuari"
            android:layout_width="253dp"
            android:layout_height="40dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="88dp"
            android:background="@color/brownMasClaro"
            android:backgroundTint="@color/brownMasClaro"
            android:ems="10"
            android:fontFamily="@font/arbutus_slab"
            android:hint="Nom"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/correu"
            android:layout_width="253dp"
            android:layout_height="40dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="20dp"
            android:background="@color/brownMasClaro"
            android:ems="10"
            android:fontFamily="@font/arbutus_slab"
            android:hint="Correu"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/telefon" />

        <EditText
            android:id="@+id/contra"
            android:layout_width="253dp"
            android:layout_height="40dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="20dp"
            android:background="@color/brownMasClaro"
            android:ems="10"
            android:fontFamily="@font/arbutus_slab"
            android:hint="Contrasenya"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/correu" />

        <EditText
            android:id="@+id/verContra"
            android:layout_width="253dp"
            android:layout_height="40dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="20dp"
            android:background="@color/brownMasClaro"
            android:ems="10"
            android:fontFamily="@font/arbutus_slab"
            android:hint="Verificacio Contrasenya"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contra" />

        <EditText
            android:id="@+id/telefon"
            android:layout_width="253dp"
            android:layout_height="40dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="20dp"
            android:background="@color/brownMasClaro"
            android:ems="10"
            android:fontFamily="@font/arbutus_slab"
            android:hint="Telefon"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomUsuari" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
