<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e5ffff"
        tools:context=".formularioPeridos">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="75dp"
            android:layout_height="31dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/arbutus_slab"
            android:text="Nom"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/nomAnimal"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="75dp"
            android:layout_height="31dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/arbutus_slab"
            android:text="Color"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/colorAnimal"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="237dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="140dp"
            android:fontFamily="@font/arbutus_slab"
            android:text="Ultima visualitzacio"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="92dp"
            android:fontFamily="@font/arbutus_slab"
            android:text="Imatge"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/añadirGaleria"
            app:layout_constraintTop_toBottomOf="@+id/DESCRIPCIO" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="237dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="140dp"
            android:fontFamily="@font/arbutus_slab"
            android:text="Detalls"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ultimaVisualitzacio" />

        <EditText
            android:id="@+id/nomAnimal"
            android:layout_width="256dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/kjhbvç"
            android:ems="10"
            android:fontFamily="@font/arbutus_slab"
            android:inputType="textPersonName"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/colorAnimal"
            android:layout_width="251dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="36dp"
            android:background="@color/kjhbvç"
            android:ems="10"
            android:fontFamily="@font/arbutus_slab"
            android:inputType="textPersonName"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomAnimal" />

        <EditText
            android:id="@+id/ultimaVisualitzacio"
            android:layout_width="346dp"
            android:layout_height="47dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:background="@color/kjhbvç"
            android:ems="10"
            android:fontFamily="@font/arbutus_slab"
            android:inputType="textPersonName"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <Switch
            android:id="@+id/amigable"
            android:layout_width="354dp"
            android:layout_height="70dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="28dp"
            android:fontFamily="@font/arbutus_slab"
            android:text="La teva mascota es amigable?"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <ImageButton
            android:id="@+id/añadirGaleria"
            android:layout_width="67dp"
            android:layout_height="62dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="128dp"
            android:background="@null"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DESCRIPCIO"
            app:srcCompat="@drawable/ic_baseline_add_photo_alternate_24" />

        <Button
            android:id="@+id/guardarInformacio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="28dp"
            android:backgroundTint="#b2dfdb"
            android:fontFamily="@font/abril_fatface"
            android:text="Guardar"
            android:textColor="#82ada9"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amigable" />

        <EditText
            android:id="@+id/DESCRIPCIO"
            android:layout_width="345dp"
            android:layout_height="105dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="32dp"
            android:background="@color/kjhbvç"
            android:ems="10"
            android:fontFamily="@font/arbutus_slab"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
