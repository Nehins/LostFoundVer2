<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".formularioPeridos">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="75dp"
            android:layout_height="31dp"
            android:layout_marginTop="69dp"
            android:layout_marginEnd="14dp"
            android:text="Nom"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/nomAnimal"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="75dp"
            android:layout_height="31dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="14dp"
            android:text="Color"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/colorAnimal"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="237dp"
            android:layout_height="35dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="140dp"
            android:text="Ultima visualitzacio"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginTop="27dp"
            android:text="Imatge"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/ultimaVisualitzacio2"
            tools:layout_editor_absoluteX="38dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="237dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="140dp"
            android:text="Detalls"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ultimaVisualitzacio" />

        <EditText
            android:id="@+id/nomAnimal"
            android:layout_width="256dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="28dp"
            android:background="@color/greeey"
            android:backgroundTint="@android:color/system_accent3_200"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/colorAnimal"
            android:layout_width="256dp"
            android:layout_height="50dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="28dp"
            android:background="@color/greeey"
            android:backgroundTint="@android:color/system_accent3_200"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomAnimal" />

        <EditText
            android:id="@+id/ultimaVisualitzacio"
            android:layout_width="346dp"
            android:layout_height="47dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="33dp"
            android:background="@color/greeey"
            android:backgroundTint="@android:color/system_accent3_200"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <EditText
            android:id="@+id/ultimaVisualitzacio2"
            android:layout_width="343dp"
            android:layout_height="118dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="32dp"
            android:background="@color/greeey"
            android:backgroundTint="@android:color/system_accent3_200"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="339dp"
            android:layout_height="74dp"
            android:layout_marginEnd="36dp"
            android:text="La teva mascota es amigable?"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="557dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
